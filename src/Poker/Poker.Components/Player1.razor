<div class="player_1">
    <div class="container">
        <div class="Player-Picture">
            <img src="@Player.Picture" alt="Player Picture" />
        </div>
        <div class="Flag">
            @* <flag-nl style="width: 30px;"></flag-nl> *@
            <img src="@Player.Flag" alt="Flag" />
        </div>
        <div class="Card-1">
            <img src="@Player.Card1" alt="Card 1" class="card" />
        </div>
        <div class="Card-2">
            <img src="@Player.Card2" alt="Card 2" class="card" />
        </div>
        <div class="Pot-Odds">
            @Player.PotOdds
        </div>
        <div class="Name">
            @Player.Name
        </div>
        <div class="Move">
            @Player.Move
        </div>
        <div class="Unknown">
            @Player.Unknown
        </div>
        <div class="Chips">
            @Player.Chips
        </div>
        <div class="Info">
            @Player.Info
        </div>
        <div class="Empty_2"></div>
    </div>
</div>